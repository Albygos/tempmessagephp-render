RewriteEngine On

# --- Allow direct access to robots.txt ---
RewriteRule ^robots\.txt$ /robots.txt [L]

# --- Allow direct access to sitemap files ---
RewriteRule ^sitemap\.xml$ /sitemap.xml [L]
RewriteRule ^sitemap\.php$ /sitemap.php [L]
RewriteRule ^sitemap_index\.xml$ /sitemap_index.xml [L]

# --- If the request is a REAL file, serve it ---
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# --- If the request is a REAL directory, serve it ---
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- Everything else â†’ index.php ---
RewriteRule ^ index.php [L]
